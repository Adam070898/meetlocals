</script>

<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
      <% @booking.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div hidden>
    <%= f.time_select :start_time %>
    <%= f.time_select :end_time %>
    <%= f.date_select :date %>
  </div>

  <div class='input-group date' id='datetimepicker11'>
    <!-- <input type='text' class="form-control" name="datetime" /> -->
    <%= text_field :datetime, :id, class:"form-control", name:"datetime", class:"form-control", required: true %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
  </div>

  <%= f.hidden_field :guest_id, value:@booking.guest_id %>
  <%= f.hidden_field :experience_id, value:@experience.id %>

  <% if current_host == @experience.host %>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.select :status, options_for_select(Booking.statuses) %>
    </div>
  <% else %>
    <div hidden>
      <%= f.text_field :status, value:@booking.status %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :group_size %><br>
   <%= f.select :group_size, options_for_select(@experience.max_number_in_group) %>
  </div>
  <div class="field">
    <%= f.label :is_private %><br>
    <%= f.check_box :is_private %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
