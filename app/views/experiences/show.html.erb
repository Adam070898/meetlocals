<p>
  <strong>Title:</strong>
  <%= @experience.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @experience.description %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @experience.duration %>
</p>

<p>
  <strong>Is halal:</strong>
  <%= @experience.is_halal ? "Yes" : "No" %>
</p>

<p>
  <strong>Cuisine:</strong>
  <%= @experience.cuisine %>
</p>

<p>
  <strong>Max group size:</strong>
  <%= @experience.max_group_size %>
</p>

<p>
  <strong>Host style:</strong>
  <%= @experience.host_style %>
</p>

<p>
  <strong>Available days:</strong>
  <% days = [:sun, :mon, :tue, :wed, :thu, :fri, :sat] %>
  <% @experience.available_days.split(//).select {|num| num != "-"}.each do |num| %>
    <%= days[num.to_i].upcase %>
  <% end %>

</p>

<p>
  <strong>Price:</strong>
  <%= @experience.price %>
</p>

<p>
  <strong>Host:</strong>
  <%= link_to @experience.host.username, "/hosts/" + @experience.host_id.to_s  %>
</p>

<p>
  <strong>Image(s):</strong></br>
  <%  @experience.images.each do |image| %>
  <%=   image_tag image.image_file.url(:medium) %></br>
  <%  end %>
</p>

<%=link_to 'Book', "#{@experience.id}/bookings/new" %> |
<% if current_host == @experience.host %>
  <%= link_to 'Edit', edit_experience_path(@experience) %> |
<% end %>
<%= link_to 'Back', experiences_path %>
