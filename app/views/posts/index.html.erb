<div class="container">
  <div class="row">
      <div class="col-md-4">
        <h1 style="margin-left: 20px"> Blog </h1>
      </div>
        <div style="float:right; margin-top: 25px; margin-right: 40px">
        <% if admin_signed_in? %>
            
              <%= link_to "Create New Post", new_post_path, class: "btn btn-default", style: "background-color:#1abc9c; color:#f5f5f5" %></button>
            
        <%end%>
        </div>
      </div>

<hr>
    <% @posts.each do |post| %>
    	<div class="col-md-4">
    		<h3 class="title"><%= link_to post.title, post %></h3>

        <p><%= image_tag post.image.url(:medium), style: "border-radius:5%" %></p>

    		<p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>
    	</div>
    <% end %>


  



</div>

