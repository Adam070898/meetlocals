<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

      <h2 style="text-align:center">Thanks for signing up, <%= current_guest.username %>(<%= @guest.email %>).</br>Please complete your guest profile</h2>

      <%= form_for @guest, url: { action: "update_guest_profile" }, html: {multipart: true} do |f| %>
        
        <div class="field">
          <%= f.label :about %><br />
          <%= f.text_area :about %>
        </div>
        
        </br>
        <div class="field">
            <%= f.label :image %><br>
            <%= f.file_field(:image_file) %>
        </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>

      <% end %>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>